{
  "name": "appdesaelectron",
  "productName": "SIPASTI",
  "author": "msm",
  "version": "1.0.0",
  "description": "Aplikasi manajemen surat daerah desa boroko!",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "start:nodemon": "nodemon --exec electron .",
    "start:dev": "concurrently \"npm run dev\" \"npm run start:nodemon\"",
    "build": "electron-builder",
    "dev": "npx tailwindcss -i ./src/css/input.css -o ./src/css/output.css --watch",
    "finale": "npx tailwindcss -o ./src/css/final.css --minify",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "package:win": "electron-packager . app-desa --overwrite --asar --platform=win32 --arch=x64 --icon=assets/img/appicon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SIPASTI\"",
    "package:linux": "electron-packager . app-desa --overwrite --asar --platform=linux --arch=x64 --icon=assets/img/appicon.png --prune=true --out=release-builds --executable-name=SIPASTI"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.3.1",
    "@electron-forge/maker-deb": "^7.3.1",
    "@electron-forge/maker-rpm": "^7.3.1",
    "@electron-forge/maker-squirrel": "^7.3.1",
    "@electron-forge/maker-zip": "^7.3.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.1",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.1.2",
    "electron": "^29.1.4",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.9",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^5.1.0",
    "moment": "^2.30.1",
    "node-printer": "^1.0.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.7"
  }
}
